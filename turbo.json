{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"check-types": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"*.ts",
				"*.tsx",
				"tsconfig.json"
			],
			"outputs": []
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"build-report": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/vitest.config.ts"],
			"dependsOn": ["transit", "@fyn/vitest-config#build"],
			"outputs": ["coverage.json"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		},
		"clean": {
			"cache": false
		},
		"check": {},
		"lint": {
			"cache": false
		}
	}
}
