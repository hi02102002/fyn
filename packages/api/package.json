{
	"name": "@fyn/api",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./dist/*.js"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc --noEmit --skipLibCheck",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"devDependencies": {
		"tsdown": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@orpc/server": "catalog:",
		"@orpc/client": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/zod": "catalog:",
		"hono": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@fyn/auth": "workspace:*",
		"@fyn/db": "workspace:*",
		"@fyn/socket": "workspace:*"
	}
}
