	"devDependencies": {
		"@fyn/tsconfig": "workspace:*",
		"tsdown": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"socket.io": "^4.8.1"
	}
}
