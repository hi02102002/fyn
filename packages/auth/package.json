{
	"name": "@fyn/auth",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./dist/*.js"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc --noEmit --skipLibCheck",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@fyn/tsconfig": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@fyn/db": "workspace:*",
		"@fyn/mail": "workspace:*",
		"@fyn/utils": "workspace:*"
	}
}
