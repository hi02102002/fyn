{
	"name": "@fyn/db",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./dist/*.js"
		}
	},
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc --noEmit --skipLibCheck",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.2",
		"@types/pg": "^8.11.11",
		"tsdown": "catalog:",
		"@fyn/tsconfig": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.2",
		"pg": "^8.14.1",
		"dotenv": "catalog:",
		"zod": "catalog:"
	}
}
