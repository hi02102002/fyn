{
	"name": "@fyn/server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc --noEmit --skipLibCheck",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"dependencies": {
		"@fyn/api": "workspace:*",
		"@fyn/auth": "workspace:*",
		"@fyn/db": "workspace:*",
		"@fyn/socket": "workspace:*",
		"@hono/node-server": "^1.14.4",
		"@orpc/openapi": "^1.10.1",
		"@orpc/server": "catalog:",
		"@orpc/zod": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@fyn/tsconfig": "workspace:*",
		"@types/node": "^22.13.11",
		"tsdown": "catalog:",
		"tsx": "^4.19.2",
		"typescript": "catalog:"
	}
}
