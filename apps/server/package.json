{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"hono": "catalog:",
		"@hono/node-server": "^1.14.4",
		"@orpc/server": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/zod": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@fyn/api": "workspace:*",
		"@fyn/auth": "workspace:*",
		"@fyn/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"tsx": "^4.19.2",
		"@types/node": "^22.13.11",
		"tsdown": "catalog:",
		"vitest": "^2.1.8",
		"@vitest/coverage-v8": "^2.1.8",
		"supertest": "^7.0.0",
		"@types/supertest": "^6.0.2"
	}
}
